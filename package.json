{
  "name": "react-speedy-reader",
  "version": "1.0.13",
  "description": "Speed reader component for React, which streams the text in chunks. Enabling the user to read long passages of text with ease.",
  "author": "Carl Saunders <carl.saunders@deadlybyte.co.uk> (http://www.deadlybyte.co.uk)",
  "license": "MIT",
  "main": "dist/index",
  "keywords": [
    "fast reading",
    "react-component",
    "skim reading",
    "scan reading",
    "speed reader",
    "reading"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:deadlybyte/react-speedy-reader.git"
  },
  "scripts": {
    "demo": "webpack --mode=development && cd demo/default && webpack --mode=development",
    "build": "webpack --mode=production",
    "eslint": "eslint --ext .js src __test__",
    "test": "jest",
    "prepublishOnly": "npm run build && npm run jsdoc",
    "jsdoc": "jsdoc -c ./jsdoc.config.json -d ./jsdoc",
    "start": "cd demo/default && webpack-dev-server --hot --inline --colors --config ./webpack.dev.config.js"
  },
  "peerDependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.13",
    "@types/expect": "^1.20.3",
    "@types/jest": "^22.2.3",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^22.4.4",
    "babel-loader": "^7.1.5",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "enzyme": "^3.5.1",
    "enzyme-adapter-react-16": "^1.4.0",
    "enzyme-to-json": "^3.3.4",
    "enzyme-wait": "^1.0.9",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "16.1.0",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-react": "7.11.1",
    "jest": "^22.4.4",
    "jsdoc": "^3.5.5",
    "minimist": "^1.2.0",
    "open-browser-webpack-plugin": "0.0.5",
    "pre-commit": "^1.2.2",
    "raf": "^3.4.0",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-hot-loader": "^4.0.0",
    "react-test-renderer": "^16.4.2",
    "webpack": "^4.17.2",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.0"
  },
  "dependencies": {
    "prop-types": "^15.6.2"
  },
  "engines": {
    "node": ">=7.6"
  },
  "jest": {
    "testURL": "http://localhost",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js, jsx}",
      "!src/**/index.js"
    ],
    "coverageDirectory": "./coverage",
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "setupFiles": [
      "raf/polyfill",
      "<rootDir>/__tests__/setupTests.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js?(x)"
    ]
  }
}
